FROM golang:1.9

WORKDIR /go/src/ci-sample

COPY /* ./

WORKDIR /go/src

RUN ls /go/src/ci-sample

RUN go vet -structtags=false -composites=false ci-sample

RUN go get -u github.com/golang/lint/golint \
        && golint -set_exit_status -min_confidence=1.1 ./ci-sample/...


-asmdecl,
assign,
atomic,
bool,
buildtags,
cgocall,
composites,
copylocks,
httpresponse,
lostcancel,
methods,
nilfunc,
printf,
rangeloops,
shadow=false,
shift,
structtags,
tests,
unreachable,
unsafeptr,
unusedresult


